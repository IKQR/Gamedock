<EditForm Model="_buildMetadata" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator/>
    <ValidationSummary/>

    <div class="row mb-md-2">
        <div class="form-group col-sm-6">
            <label>Build Name:</label>
            <InputText class="form-control" @bind-Value="_buildMetadata.BuildName" required/>
        </div>

        <div class="form-group col-sm-6">
            <label>Version:</label>
            <InputText class="form-control" @bind-Value="_buildMetadata.Version" required/>
        </div>
    </div>

    <div class="row mb-md-2">
        <div class="form-group col-sm-6">
            <label>Runtime Path:</label>
            <InputText class="form-control" @bind-Value="_buildMetadata.RuntimePah" required/>
        </div>

        <div class="form-group col-sm-6">
            <label>Upload File:</label>
            <input type="file" class="form-control" @ref="_fileInput" @onchange="HandleFileSelection" accept=".tar"/>
        </div>
    </div>

    <div class="row">
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mt-2">Upload</button>
        </div>
        <div class="col-md">
            <div class="progress mt-3">
                <div class="progress-bar" role="progressbar" style="width: @_progressPercentage%;" aria-valuenow="@_progressPercentage" aria-valuemin="0" aria-valuemax="100">@_progressPercentage%</div>
            </div>
        </div>
    </div>
</EditForm>